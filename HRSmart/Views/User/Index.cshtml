@{
    Layout = "~/Views/Shared/templateLayout.cshtml";
}


<div class="container">
    <div class="block-header">
        <h2>List Of users</h2>

        <ul class="actions">
            <li>
                <a href="#">
                    <i class="zmdi zmdi-trending-up"></i>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="zmdi zmdi-check-all"></i>
                </a>
            </li>
            <li class="dropdown">
                <a href="#" data-toggle="dropdown">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <a href="#">Refresh</a>
                    </li>
                    <li>
                        <a href="#">Manage Widgets</a>
                    </li>
                    <li>
                        <a href="#">Widgets Settings</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>
                Description
                <small>
                  <b>This is the list of all users</b>   
                </small>
            </h2>
        </div>

        <div class="table-responsive">
            <table id="data-table-basic" class="table table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Position</th>
                        <th>adresse</th>
                        <th>Telephone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Position</th>
                        <th>adresse</th>
                        <th>Telephone</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var u in ViewBag.users)
                    {
                        <tr>

                            <td>@u.firstName</td>
                            <td>@u.lastName</td>
                            <td>@u.age</td>
                            <td>@u.role</td>
                            <td>@u.adresse</td>
                            <td>@u.numTel</td>
                            <td>
                                    <a class="btn btn-danger btn-icon waves-effect waves-circle waves-float">
                                        <i class="zmdi zmdi-close"></i>

                                    </a> <span style="visibility:hidden;">xx</span>
                              

                            
                                  
                                <a href="@Url.Action("Details/"+@u.id,"User")" class="btn btn-info btn-icon waves-effect waves-circle waves-float">

                                    <i class="zmdi zmdi-search"></i>
                                </a>

</tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

