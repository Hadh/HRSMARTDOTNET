@{
    Layout = "~/Views/Shared/templateLayout.cshtml";
}

    <div class="block-header">
        <h2>List Of Employees</h2>

        <ul class="actions">
            <li>
                <a href="#">
                    <i class="zmdi zmdi-trending-up"></i>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="zmdi zmdi-check-all"></i>
                </a>
            </li>
            <li class="dropdown">
                <a href="#" data-toggle="dropdown">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <a href="#">Refresh</a>
                    </li>
                    <li>
                        <a href="#">Manage Widgets</a>
                    </li>
                    <li>
                        <a href="#">Widgets Settings</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>
                Description
                <small>
                    <b>This is the list of all employees</b>
                </small>
            </h2>
        </div>

        <div class="table-responsive">
            <table id="data-table-basic" class="table table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Position</th>
                        <th>adresse</th>
                        <th>Telephone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Position</th>
                        <th>adresse</th>
                        <th>Telephone</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in @ViewBag.users)
                    {
                        <tr>

                            <td>@user.firstName</td>
                            <td>@user.lastName</td>
                            <td>@user.age</td>
                            <td>@user.role</td>
                            <td>@user.adresse</td>
                            <td>@user.numTel</td>
                            <td>




                                <a href="@Url.Action("Details/"+@user.id,"User")" class="btn btn-info btn-icon waves-effect waves-circle waves-float">

                                    <i class="zmdi zmdi-search"></i>
                                </a>
                                

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
