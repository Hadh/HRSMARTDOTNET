@{
    Layout = "~/Views/Shared/templateLayout.cshtml";
}



<div class="pm-body clearfix">

    <div class="pmb-block">
        <div class="pmbb-header">
            <h2>Job Informations</h2>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <dl class="dl-horizontal">
                    <dt>Title</dt>
                    <dd>@ViewBag.job.title</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Description</dt>
                    <dd>@ViewBag.job.description</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Salary</dt>
                    <dd>@ViewBag.job.salary</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Estimated Salary</dt>
                    <dd>@ViewBag.estimation</dd>
                </dl>
                <dl class="dl-horizontal">
                    <dt>Number Of Postulations</dt>
                    <dd>@ViewBag.numPostulations</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="pmb-block">
        <div class="pmbb-header">
            <h2>Skills Required</h2>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <dl class="dl-horizontal">
                    @foreach (var s in @ViewBag.job.jobskills)
                    {
                        <dt>@s.skill.name</dt>
                        <dd>Level : @s.level/10</dd>
                    }

                </dl>
            </div>
        </div>
    </div>
    <div class="pmb-block">
        <div class="pmbb-header">
            <h2>Referal Rewards</h2>
        </div>
        <div class="pmbb-body p-l-30">
            <div class="pmbb-view">
                <dl class="dl-horizontal">
                    @foreach (var r in @ViewBag.job.rewards)
                    {
                        <dt>Stage Name : @r.stage.name</dt>
                        <dd>Reward : @r.value</dd>
                    }

                </dl>
            </div>
        </div>
    </div>
    <a href='@Url.Action("Analytics/"+@ViewBag.job.id,"JobOffer")' class="btn bgm-blue waves-effect">Analytics</a>
    <a href='@Url.Action("Index","JobOffer")' class="btn bgm-blue waves-effect">Back</a>
</div>