@using HRSmart.Models
@using Microsoft.AspNet.Identity

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @Styles.Render("~/Content/dropzonescss")
    <link href="@Url.Content("~/Content/")SkillStyle.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/template/")vendors/bower_components/fullcalendar/dist/fullcalendar.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/template/")vendors/bower_components/animate.css/animate.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/template/")vendors/bower_components/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
